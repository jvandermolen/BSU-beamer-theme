\mode<presentation>

\definecolor{mrcdarkblue}{RGB}{46,45,98}
\definecolor{mrclightblue}{RGB}{0,190,213}
\definecolor{mrcgray}{RGB}{98,98,98}
\definecolor{mrcred}{RGB}{233,77,54}

\setbeamercolor*{palette primary}{fg=white,bg=mrcdarkblue}
\setbeamercolor*{palette secondary}{fg=white,bg=mrclightblue}
\setbeamercolor*{palette tertiary}{fg=white,bg=mrcred}
\setbeamercolor*{palette quaternary}{fg=white,bg=mrcgray}

\setbeamercolor{title}{fg=mrcdarkblue}
\setbeamercolor{subtitle}{fg=mrcgray}
\setbeamercolor*{titlelike}{bg=white}
\setbeamercolor*{frametitle}{fg=mrcdarkblue}
\setbeamercolor*{frametitleback}{bg=white}
\setbeamercolor*{part title}{bg=black,fg=black}
\setbeamercolor*{heading}{fg=mrclightblue, bg=white}

\setbeamercolor*{footer}{fg=mrcdarkblue}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor*{pages}{fg=mrcgray, bg=white}
\setbeamercolor*{normal text}{fg=mrcgray}

%blocks
\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamercolor{block title}{fg=white,bg=mrcdarkblue}
\setbeamercolor{block body}{fg=mrcgray,bg=mrcgray!10}



\setbeamercolor{block title alerted}{fg=white,bg=mrcred}
\setbeamercolor{block body alerted}{fg=mrcgray,bg=mrcgray!10}

\setbeamercolor{block title example}{fg=white,bg=mrclightblue}
\setbeamercolor{block body example}{fg=mrcgray,bg=mrcgray!10}

\setbeamercolor{alerted text}{fg=mrcred}

\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[circle]

\setbeamercolor*{item}{fg=mrcgray}
\setbeamercolor*{subitem}{fg=mrcgray}

\mode
<all>
